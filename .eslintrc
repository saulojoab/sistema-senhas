{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "@natahouse",
    "plugin:prettier/recommended",
    "prettier/react"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx", ".storybook"]
      }
    }
  },
  "globals": {
    "document": true,
    "Image": true,
    "window": true
  },
  "rules": {
    "import/prefer-default-export": "off",
    "arrow-body-style": "off",
    "max-params": "off",
    "import/no-extraneous-dependencies": "off",
    "camelcase": "off",
    "import/no-cycle": "off",
    "no-use-before-define": [
      "error",
      { "functions": false, "classes": true, "variables": true }
    ],
    "react-hooks/exhaustive-deps": "off"
  },
  "env": {
    "jest": true
  }
}
